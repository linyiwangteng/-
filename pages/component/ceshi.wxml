<view>
    <view class="myheader userinfo">
        <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}"></image>
        <text class="userinfo-nickName">{{userInfo.nickName}}</text>
        <text>{{userInfo.gender}}</text>
        <text>地址：{{userInfo.country}}--{{userInfo.province}}--{{userInfo.city}}</text>
    </view>
    <view class="text">{{tips}}</view>
</view>


<view  bindtap="bindViewTap" class="userinfo" bindtap="ceshi">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickName">{{userInfo.nickName}}</text>
  </view>
<view catchtap='getCurrentPage'>currentPage</view>